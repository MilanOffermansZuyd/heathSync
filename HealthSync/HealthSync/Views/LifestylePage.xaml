<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthSync.Views.LifestylePage"
             Title="Lifestyle">

    <Grid Padding="20"
          RowDefinitions="*,Auto"
          RowSpacing="12">

        <!-- Alles wat mag scrollen -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="12">

                <!-- Tijdelijk: test binding -->
                <Label Text="{Binding IngelogdeUser.Email, StringFormat='Ingelogd als: {0} (Lifestyle)'}"
                       FontSize="18" />

                <!-- Hier komen later lifestyle logs / stats / knoppen -->

            </VerticalStackLayout>
        </ScrollView>

        <!-- Vaste knop onderaan -->
        <Button Grid.Row="1" x:Name="Testknop" Text="Testknop" />

    </Grid>
</ContentPage>