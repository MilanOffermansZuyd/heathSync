<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthSync.Views.MedicationPage"
             Title="Medicatie">

    <Grid Padding="20"
          RowDefinitions="Auto,*,Auto"
          RowSpacing="12">

        <!-- Tab knoppen -->
        <Grid Grid.Row="0" ColumnDefinitions="*,*"
              ColumnSpacing="12">

            <Button x:Name="BtnTabMedicatie"
                    Grid.Column="0"
                    Text="Mijn medicatie"
                    Clicked="TabMedicatie_Clicked" />

            <Button x:Name="BtnTabAanvragen"
                    Grid.Column="1"
                    Text="Mijn aanvragen"
                    Clicked="TabAanvragen_Clicked" />

        </Grid>

        <!-- Content (scrollbaar) -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="12">

                <!-- View 1: Medicatie lijst -->
                <VerticalStackLayout x:Name="MedicatieView"
                                     Spacing="12"
                                     BindableLayout.ItemsSource="{Binding Prescriptions}">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#CCCCCC"
                                    StrokeThickness="1"
                                    Padding="14">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>

                                <Grid ColumnDefinitions="*,Auto"
                                      RowDefinitions="Auto,Auto,Auto,Auto,Auto">

                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Medication.Name}"
                                           FontSize="16"
                                           FontAttributes="Bold" />

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding TakeCount, StringFormat='{0}x per dag'}"
                                           FontSize="14" />

                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="{Binding Instruction}"
                                           FontSize="14"
                                           LineBreakMode="WordWrap" />

                                    <Label Grid.Row="3" Grid.Column="0"
                                           Text="{Binding Amount, StringFormat='Voorraad: {0}'}"
                                           FontSize="14" />

                                    <Label Grid.Row="4" Grid.Column="0"
                                           Text="{Binding RefillsRemaining, StringFormat='Extra pakjes voorraad: {0}'}"
                                           FontSize="14" />

                                    <HorizontalStackLayout Grid.RowSpan="5"
                                                           Grid.Column="1"
                                                           Spacing="6"
                                                           VerticalOptions="Center"
                                                           HorizontalOptions="End">
                                        <Label Text="ðŸ’Š" FontSize="22" />
                                    </HorizontalStackLayout>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>

                <!-- View 2: Aanvragen lijst -->
                <VerticalStackLayout x:Name="AanvragenView"
                                     IsVisible="False"
                                     Spacing="12"
                                     BindableLayout.ItemsSource="{Binding PrescriptionRequests}">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#CCCCCC"
                                    StrokeThickness="1"
                                    Padding="14">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>

                                <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                      ColumnDefinitions="*,Auto">

                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Medication.Name}"
                                           FontSize="16"
                                           FontAttributes="Bold" />

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding DateOfRequest, StringFormat='Aangevraagd: {0:dd-MM-yyyy HH:mm}'}"
                                           FontSize="14"
                                           TextColor="Gray" />

                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="{Binding Doctor.FullName, StringFormat='Dokter: {0}'}"
                                           FontSize="14" />

                                    <Label Grid.Row="3" Grid.Column="0"
                                           Text="{Binding Pharmacy.PharmacyName, StringFormat='Apotheek: {0}'}"
                                           FontSize="14" />

                                    <Label Grid.RowSpan="4" Grid.Column="1"
                                           Text="{Binding Status}"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End" />

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Onderste knop blijft: alleen zichtbaar bij medicatie tab -->
        <Button Grid.Row="2"
                x:Name="MedicationRequest"
                Text="Medicatie aanvragen"
                Clicked="MedicationRequest_Clicked" />

    </Grid>
</ContentPage>