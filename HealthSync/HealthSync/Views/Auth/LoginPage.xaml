<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthSync.Views.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="20" Spacing="12">

        <Entry x:Name="EntEmail" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="EntWachtwoord" Placeholder="Wachtwoord" IsPassword="True" />

        <Button x:Name="Login" Text="Inloggen" Clicked="Login_Clicked" />
        <Button x:Name="Registreren" Text="Registreren" Clicked="Registreren_Clicked" />

        <Label x:Name="LblStatus" Text="" />

    </VerticalStackLayout>
</ContentPage>