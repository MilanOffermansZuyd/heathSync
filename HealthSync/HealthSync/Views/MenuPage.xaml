<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthSync.Views.MenuPage"
             Title="Menu">

    <Grid Padding="20"
          RowDefinitions="*,Auto"
          RowSpacing="12">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="12">

                <!-- Menu items -->
                <!-- Profiel & instellingen -->
                <Border Stroke="#CCCCCC" StrokeThickness="1" Padding="14">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer x:Name="ProfielInstellingen" Tapped="ProfielInstellingen_Tapped"/>
                    </Border.GestureRecognizers>
                    
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Profiel &amp; instellingen" FontSize="16" />
                        <Label Grid.Column="1" Text=">" FontSize="16" />
                    </Grid>
                </Border>

                <!-- Noodhulp -->
                <Border Stroke="#CCCCCC" StrokeThickness="1" Padding="14">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer x:Name="Noodhulp" Tapped="Noodhulp_Tapped"/>
                    </Border.GestureRecognizers>
                    
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Noodhulp" FontSize="16" />
                        <Label Grid.Column="1" Text=">" FontSize="16" />
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>


        <Button Grid.Row="1" x:Name="Uitloggen" Text="Uitloggen" Clicked="Uitloggen_Clicked" BackgroundColor="#D32F2F" TextColor="White" />

    </Grid>
</ContentPage>