<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthSync.Views.MedicatiePage"
             Title="Medicatie">

    <Grid Padding="20"
          RowDefinitions="*,Auto"
          RowSpacing="12">

        <!-- Alles wat mag scrollen -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="12">

                <Label Text="Medicatie" FontSize="22" />

                <!-- Tijdelijk: test binding -->
                <Label Text="{Binding IngelogdeUser.Role, StringFormat='Ingelogd als: {0}'}"
                       FontSize="18" />

                <!-- Hier komt later lijst/overzicht van medicatie -->

            </VerticalStackLayout>
        </ScrollView>

        <!-- Vaste knop onderaan (kies nu alvast een placeholder) -->
        <Button Grid.Row="1" x:Name="Testknop" Text="TestKnop"/>

    </Grid>
</ContentPage>