<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthSync.Views.DashboardPage"
             Title="Dashboard">
    
    <Grid Padding="20"
          RowDefinitions="*,Auto"
          RowSpacing="12">

        <!-- Alles wat mag scrollen -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="12">

                <Label Text="{Binding IngelogdeUser.VolledigeNaam, StringFormat='Welkom {0} op het Dashboard'}"
                       FontSize="18" />

                <!-- Hier komen later je dashboard cards: medicatie vandaag, stats, etc. -->

            </VerticalStackLayout>
        </ScrollView>

        <!-- Vaste knop onderaan (placeholder) -->
        <Button Grid.Row="1" x:Name="Noodhulp" Text="Noodhulp" Clicked="Noodhulp_Clicked" BackgroundColor="#F59E0B" TextColor="White"/>

    </Grid>
</ContentPage>